<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_img_vocabulary_cat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:riv_corner_radius="20dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_btn_favorite_vocabulary_cat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignEnd="@+id/item_img_vocabulary_cat"
            android:layout_alignBottom="@+id/item_img_vocabulary_cat"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/favorite_button"
            android:src="@drawable/round_favorite_border_24" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_lbl_vocabulary_cat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/colorTrueBlack"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>