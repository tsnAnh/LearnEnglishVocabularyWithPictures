<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tsnanh.education.learnenglishvocabularywithpictures">

    <application
        android:name=".controller.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.FavoriteVocabularyActivity"></activity>
        <activity android:name=".view.VocabularySearchActivity" />
        <activity android:name=".view.VocabularySettingsActivity" />
        <activity android:name=".view.VocabularyActivity" />
        <activity android:name=".view.VocabularyCategoryActivity" />
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider{com.tsnanh.education.learnenglishvocabularywithpictures}"
            android:exported="true" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>